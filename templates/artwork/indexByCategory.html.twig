{% extends 'base.html.twig' %}

{% block body %}

	<h2>Découvrez notre catégorie 
		{{ category.name }}</h2>

	<div id="card-area-categories">
		<div class="wrapper">
			<div class="box-area">
				{% for artwork in artworks %}
					<div class="box">
						<img class="image" src="{{ vich_uploader_asset(artwork) }}" alt="{{ artwork.title }}" loading="lazy">
						<div class="overlay">
							<h3>{{ artwork.title }}</h3>
							<a class="btn btn-secondary form-button form-link artwork-descovery" href="{{ path('app_artwork_show', {'id': artwork.id}) }} " role="button">Découvrir</a>
						</div>
					</div>
				{% else %}
					<div class="notFoundCategory">Il n'y a pas encore d'oeuvre à consulter</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}
