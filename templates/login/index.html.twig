{% extends 'base.html.twig' %}

{% block title %}Page de connexion
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success flash-message">
			{{ message }}
		</div>
	{% endfor %}
	<section class="form">
		<h1 class="h1-form">Connexion</h1>
		<form class="form_login" action="{{ path('app_login') }}" method="post">
			{% if error %}
				<div class="loginError">Adresse e-mail ou mot de passe incorrect.</div>
			{% endif %}
			<fieldset class="form_login">
				<label for="username">Email * :</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}">
			</fieldset>
			<fieldset class="form_login">
				<label for="password">Mot de passe * :</label>
				<input type="password" id="password" name="_password">
			</fieldset>
			<fieldset
				class="form_login">
				{# If you want to control the URL the user is redirected to on success #}
				<input type="hidden" name="_target_path" value="/">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="form_login" type="submit">
					Connexion
				</button>
			</fieldset>
			<fieldset class="form_login">
				<p class="p_login">Pas de compte : 
					<a href="{{ path('register') }} ">s'inscrire</a>
				</p>
			</fieldset>
		</form>
	</section>
{% endblock %}
