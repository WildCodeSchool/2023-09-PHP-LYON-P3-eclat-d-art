{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<div class="title-page-artiste">
		<h1>{{ user.name }}</h1>
	</div>

	<div class="profile-container">
		<div class="info">
			<h3>{{ user.name }}</h3>
			<h4>{{ user.nationality }}</h4>
			<h4>Description :</h4>
			<p>{{ user.description }}</p>
		</div>
		<div class="image-container">
			<img class="image-artwork-mini" src="{{ vich_uploader_asset(user) }}" alt="{{ user.picture }}" loading="lazy">
			{% if user.instagram or user.facebook or user.twitter or user.pinterest %}
			<div class="social-links">
			{% if user.instagram %}
				<a href="{{ user.instagram }}" ><i class="fa-brands fa-instagram" style="color: #000000; font-size: 1.8rem; margin-right: 1rem;"></i></a>
			{% endif %}
			{% if user.facebook %}
				<a href="{{ user.facebook }}" ><i class="fa-brands fa-facebook" style="color: #000000; font-size: 1.8rem; margin-right: 1rem;"></i></a>
			{% endif %}	
			{% if user.twitter %}
				<a href="{{ user.twitter }}" ><i class="fa-brands fa-x-twitter" style="color: #000000; font-size: 1.8rem; margin-right: 1rem;"></i></a>
			{% endif %}	
			{% if user.pinterest %}	
				<a href="{{ user.pinterest }}" ><i class="fa-brands fa-pinterest" style="color: #000000; font-size: 1.8rem; margin-right: 1rem;"></i></a>
			{% endif %}	
			</div>
			{% endif %}
		</div>
	</div>
	<div class="button-user">
	{% if is_granted("ROLE_ADMIN") or (app.user and app.user.id == user.id) %}
				<div class="show-footer">
					<a class="btn btn-primary artwork-descovery" href="{{ path('app_user_edit', {'id': user.id}) }}" aria-label="Editer l\'oeuvre">Editer</a>
					{{ include('user/_delete_form.html.twig') }}
				</div>
			{% endif %}
</div>
	<div class="title-artiste">
		<h2>Retrouver d'autres oeuvres de
			{{ user.name }}</h2>
	</div>

	<div id="card-area-categories">
		<div class="wrapper">
			<div class="box-area">
				{% for artwork in artworks %}
					<div class="box">
						<img class="image" src="{{ vich_uploader_asset(artwork) }}" alt="{{ artwork.title }}" loading="lazy">
						<div class="overlay">
							<h3>{{ artwork.title }}</h3>
							<a class="btn btn-secondary form-button form-link artwork-descovery;" href="{{ path('app_artwork_show', {'id': artwork.id}) }} " role="button">DÃ©couvrir</a>
						</div>
					</div>
				{% else %}
					<p>no records found</p>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
