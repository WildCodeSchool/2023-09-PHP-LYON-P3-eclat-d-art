{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<div class="title-page-artiste">
		<h1>{{ user.name }}</h1>
	</div>

	<div class="profile-container">
		<div class="info">
			<h3>{{ user.name }}</h3>
			<h4>{{ user.nationality }}</h4>
			<h4>Description :</h4>
			<p>{{ user.description }}</p>
		</div>
		<div class="image-container">
			<img class="image-artwork-mini" src="{{ vich_uploader_asset(user) }}" alt="{{ user.picture }}" loading="lazy">
			<div class="social-links">
				<a href="#" class="social-link"><img class="icon" src=" {{ asset('build/images/instagram.png')}} " alt="Instagram"></a>
				<a href="#" class="social-link"><img class="icon" src=" {{ asset('build/images/facebook.png')}} " alt="Facebook"></a>
				<a href="#" class="social-link"><img class="icon" src=" {{ asset('build/images/twitter.png')}} " alt="Twitter"></a>
				<a href="#" class="social-link"><img class="icon" src=" {{ asset('build/images/pinterest.png')}} " alt="Pinterest"></a>
			</div>
		</div>
	</div>

	<div class="title-artiste">
		<h2>Retrouver d'autres oeuvres de
			{{ user.name }}</h2>
	</div>

	<div id="card-area-categories">
		<div class="wrapper">
			<div class="box-area">
				{% for artwork in artworks %}
					<div class="box">
						<img class="image" src="{{ vich_uploader_asset(artwork) }}" alt="{{ artwork.title }}" loading="lazy">
						<div class="overlay">
							<h3>{{ artwork.title }}</h3>
							<a class="btn btn-secondary form-button form-link artwork-descovery" href="{{ path('app_artwork_show', {'id': artwork.id}) }} " role="button">DÃ©couvrir</a>
						</div>
					</div>
				{% else %}
					<p>no records found</p>
				{% endfor %}
			</div>
		</div>
	</div>

	<a href="{{ path('app_user_index') }}">back to list</a>

{% endblock %}
