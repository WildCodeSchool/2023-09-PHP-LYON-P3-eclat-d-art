{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% block head %}
    <meta name="description" content="Notre formulaire  d'enregistrement sur notre site">
{% endblock %}
{% block body %}
<section class="form_artwork">
	<h1>Formulaire d'Inscription</h1>
	<div class="form_artwork">

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.name, {
            label: 'Nom d\'artiste'
        }) }}
        {{ form_row(registrationForm.nationality, {
            label: 'Nationalit√©'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

        {{ form_row(registrationForm.posterFile) }}

    <button class="btn btn-light btn-block" aria-label="Click here to send your registration">{{ button_label|default(' Valider ') }}</button>
    {{ form_end(registrationForm) }}
</div>
</section>
{% endblock %}
